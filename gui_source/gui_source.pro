QT       += core gui widgets

TARGET = xneviewer
TEMPLATE = app

CONFIG += c++11

SOURCES += \
        guimainwindow.cpp \
        main_gui.cpp \
        dialogoptions.cpp \
        dialogabout.cpp

HEADERS += \
        dialogoptions.h \
        dialogabout.h \
        guimainwindow.h

FORMS += \
        dialogoptions.ui \
        dialogabout.ui \
        guimainwindow.ui

include(../build.pri)

!contains(XCONFIG, newidget) {
    XCONFIG += newidget
    include(../FormatWidgets/NE/newidget.pri)
}

!contains(XCONFIG, xoptions) {
    XCONFIG += xoptions
    include(../../_mylibs/xoptions/xoptions.pri)
}

win32 {
    RC_ICONS = ../icons/main.ico
}
macx {
    ICON = ../icons/main.icns
}

RESOURCES += \
    rsrc.qrc
